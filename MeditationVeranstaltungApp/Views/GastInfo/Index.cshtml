@using MeditationVeranstaltungApp.Data
@{
    ViewData["Title"] = "Gast Info";
}

<div class="text-center">
    <div class="d-flex justify-content-between">
        <h3>Meine Buchungen</h3>
        <form asp-action="CreateEditGastInfo">
            <button type="submit" class="btn btn-primary">Neue Buchung</button>
        </form>

    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Anzahl</th>
                <th>Ankunft Info</th>
                <th>Abfahrt Info</th>
                <th>Kontakt</th>
                <th>Fahrer</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (GastInfo gast in ViewBag.GastInfos)
                {
                    var anzahl = gast.AnzahlMaenner + gast.AnzahlWeiblich;
                    <tr class="@((gast.AbgesagtAm!=null ? "table-danger" : ""))">
                        <td>@anzahl </td>
                        <td>@gast.AnkunftAm (@gast.AnkunftOrt)</td>
                        <td>@gast.AbfahrtAm (@gast.AbfahrtOrt)</td>
                        <td>@gast.Kontakt.Vorname @gast.Kontakt.Nachname (@gast.Kontakt.Stadt-@gast.Kontakt.Land)</td>
                        @if (gast.FahrerKontakt != null)
                        {
                            <td>@gast.FahrerKontakt.Vorname @gast.FahrerKontakt?.Nachname (@gast.FahrerKontakt?.Stadt-@gast.FahrerKontakt?.Land)</td>

                        }
                        else
                        {
                            <td></td>
                        }

                        <td>
                            <div class="d-flex" style="gap: 4px;">
                                <form asp-action="Details" asp-route-id="@gast.Id">
                                    <button type="submit" class="btn btn-info">Anzeigen</button>
                                </form>


                                @{
                                    User.IsInRole("User");
                                    if (User.IsInRole("User"))
                                    {
                                        <form asp-action="CreateEditGastInfo" asp-route-id="@gast.Id">
                                            <button type="submit" class="btn btn-warning">Bearbeiten</button>
                                        </form>
                                        if (gast.AbgesagtAm != null)
                                        {
                                            <button type="button" class="btn btn-danger disabled" data-bs-toggle="modal" data-bs-target="#absageBestaetigungModal">Absagen</button>

                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#absageBestaetigungModal">Absagen</button>

                                        }

                                        <!-- Modal -->
                                        <div class="modal fade" id="absageBestaetigungModal" tabindex="-1" aria-labelledby="absageBestaetigungModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">

                                                <div class="modal-content">
                                                    <form asp-action="Absage" class="d-flex flex-column p-3 gap-3">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="absageBestaetigungModalLabel">Absage</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h5>Schade, dass Sie nicht mitmachen wollen!</h5>
                                                    @model AbsageModel

                                                            <div class="d-flex flex-fill mt-1" style="gap:20px;">
                                                                <input hidden type="number" min="0" class="form-control" asp-for="Id" value="@gast.Id" id="Id" name="Id">
                                                                <div class="flex-fill">
                                                                    <label for="AbsageGrund" class="form-label">Teilen Sie bitte den Grund mit!</label>
                                                                    <textarea asp-for="AbsageGrund" rows="4" class="form-control" id="AbsageGrund" name="AbsageGrund"> </textarea>
                                                                </div>


                                                            </div>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                                                            <button type="submit" class="btn btn-danger">Absagen</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                }

                                @{
                                    if (User.IsInRole("Admin"))
                                    {
                                        <form asp-action="CreateEditGastInfo" asp-route-id="@gast.Id">
                                            <button type="button" class="btn btn-primary">Fahrer Zuweisen</button>
                                        </form>
                                    }
                                }

                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>



</div>
